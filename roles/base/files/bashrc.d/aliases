# Ansible power user stuff
alias ap="ansible-playbook"

# Vagrant power user stuff
alias vu="vagrant up"
alias vp="vagrant provision"
alias vpp="vagrant provision --provision-with"
alias vr="vagrant reload"
alias vd="vagrant destroy"
alias vh="vagrant halt"
alias vssh="vagrant ssh"
alias vs="vagrant status"
alias vbl="vagrant box list"
alias vbrm="vagrant box remove"
alias vgs="vagrant global-status"

# Python virtual environment stuff
# Create a new virtual environment
alias ve="python3 -m venv venv"
alias va="source venv/bin/activate"

# Exa (ls replacement) stuff
alias lx="exa --long --icons --all"
alias tree="exa --tree --icons --all"
alias ll="lx"

# Kitty can render arbitrary images directly
alias icat="kitty +kitten icat"

# Process checker
alias psa="ps aux | rg -i"

# Update the machine prettily
alias yummy="sudo yum update -y | lolcat"

# Pure laziness
alias open="xdg-open"

# Fancy password manager
alias getskate="skate list -k | gum filter | xargs skate get"

# Fancy help viewer
# Usage: help <command>
if command -V bat &> /dev/null; then
    help() {
        "$@" --help 2>&1 | bat --plain --language=help
    }
fi

# Git Helpers
alias g="git"
alias gs="g status"
alias ga="g add -A"
alias gap="g add -p"
alias gd="g diff"
alias gc="g commit"
alias gcq="ga && gc"
alias gcam="gc --amend --no-edit"
alias gco="g checkout"
alias gls="g log -n5"
alias gla="g log --all"
alias glg="g log --graph"
alias gtail="g log -n1"
alias gd="g diff"
alias gdc="g diff --cached"
alias gdh="g diff HEAD"